{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.json"
  },
  "monorepo": true,
  "root": "./",
  "projects": {
    "url-shortener:auth-backend": {
      "type": "application",
      "root": "./",
      "entryFile": "main",
      "sourceRoot": "./apps/url-shortener/backend/auth-backend/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "url-shortener:management-backend": {
      "type": "application",
      "root": "./",
      "entryFile": "main",
      "sourceRoot": "./apps/url-shortener/backend/management-backend/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    }
  }
}
